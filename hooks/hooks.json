{
  "description": "Markdown LSP Plugin Hooks - Validates markdown files on write operations",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/validate-code-blocks.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/validate-links.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/validate-frontmatter.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/validate-claude-code.js",
            "timeout": 10
          }
        ],
        "conditions": {
          "fileExtensions": [".md", ".markdown"]
        }
      }
    ]
  }
}
